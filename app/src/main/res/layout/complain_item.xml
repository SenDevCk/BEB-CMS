<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_entrydate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="0 Days 0 hours"
        android:textColor="#FB0113"
        android:textSize="9dip"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="2dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".9"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
             >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:text="Mobile No." />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:text="contact no"
                    android:textColor="@android:color/black"
                    android:textSize="16dip"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:singleLine="true"
                    android:text="Complain Type" />

                <TextView
                    android:id="@+id/tv_Grivance_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:text="Complain Type"
                    android:textColor="@android:color/black"
                    android:singleLine="true"
                    android:textStyle="normal"
                    android:typeface="sans" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:singleLine="true"
                    android:text="Compalin No." />

                <TextView
                    android:id="@+id/tv_Grivance_Id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:text="Complain Id"
                    android:textColor="#000000"
                    android:textSize="12dip"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:text="Status" />

                <TextView
                    android:id="@+id/tv_Grivance_sts"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:text="Status"
                    android:textColor="#4043A6"
                    android:textSize="12dip"
                    android:singleLine="true"
                    android:textStyle="normal"
                    android:typeface="sans" />
            </LinearLayout>



        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_weight=".1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".45"
            android:padding="1dip"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_GrivanceImg"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:background="#eee"
                android:padding="1dp"
                android:scaleType="fitXY" />

        </RelativeLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/tv_add_con"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="add"
        android:textColor="@color/purpul"
        android:textSize="12dip"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:textStyle="normal"
        android:typeface="sans" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>
